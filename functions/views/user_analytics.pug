    canvas(id="webhooksReceived" width="400" height="200")
    script.
      var graphData = !{JSON.stringify(graphData)}
      console.log(graphData)
      // Your chart data
      var data = {
          datasets: [{
              label: "Webhooks Received",
              borderColor: "rgb(75, 192, 192)",
              data: graphData.webhooks,
              fill: false
          }]
      };

      // Chart configuration
      var config = {
          type: 'line',
          data: data,
          options: {
              scales: {
                  x: {
                      type: 'category',
                      labels: data.labels
                  },
                  y: {
                      beginAtZero: true
                  }
              }
          }
      };

      // Create the chart
      var ctx = document.getElementById('webhooksReceived').getContext('2d');
      var myChart = new Chart(ctx, config);

